{% extends 'base.html.twig' %}

{% block title %}Sélection du véhicule
{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="vr4s70">
            <h1 class="h06k9w">
                <span class="pq759c">Quel véhicule souhaitez-vous utiliser ?</span>
            </h1>
            {{ form_start(form) }}
