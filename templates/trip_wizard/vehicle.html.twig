                {{ form_errors(form) }}
            </div>
            <div class="row">
                <div class="col">
                    {{ form_row(form.car) }}
                    <div class="mt-3">
                        <a href="{{ path('app_car_create', { fromWizard: 1 }) }}" class="btn btn-outline-primary">
