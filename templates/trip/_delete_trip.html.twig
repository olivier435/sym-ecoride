<form method="post" action="{{ path('app_trip_delete', { id: trip.id }) }}" data-controller="trip-delete" data-trip-delete-target="form" data-trip-id="{{ trip.id }}" data-action="trip-delete#submit" data-turbo="false">
	<input type="hidden" name="_token" value="{{ csrf_token('cancel' ~ trip.id) }}">
	<button type="submit" class="btn btn-outline-danger">
		Annuler le trajet
		<span class="spinner-border spinner-border-sm d-none ms-2" role="status" aria-hidden="true" data-trip-delete-target="spinner"></span>
	</button>
</form>